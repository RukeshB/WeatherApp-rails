<div class="flex justify-center items-center w-full h-[80vh]">
  <div class="shadow-lg p-12 bg-gray-800 rounded-md text-white">
    <div class="text-3xl">
      <h1><%= @weather.location.city %></h1>
    </div>

    <img src= <%= icon_url(@weather.icon)%> alt="Weather Icon" class="w-32 h-auto">

    <div class="mb-4">
      <h2 class="text-2xl"><%= @weather.weather %></h2>
      <h3><%= @weather.description %></h3>
      <h1><%= @weather.temp_min %><sup>°</sup>C - <%= @weather.temp_max %><sup>°</sup>C </h1>
    </div>

    <div class="flex justify-center items-center w-full">
        <%= link_to 'view All', weather_index_path, class: 'text-white bg-transparent border-2 border-blue-800 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5' %>
    </div>
  </div>
</div>
